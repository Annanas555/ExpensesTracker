<Page x:Class="ExpenditureTracker.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExpenditureTracker.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход"
      Background="{StaticResource PageBackground}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин" Margin="0 0 0 10"/>
            <TextBox Name="LoginTextBox" Margin="0 0 0 20" Width="200"/>
            <TextBlock Text="Пароль" Margin="0 0 0 10"/>
            <PasswordBox Name="PasswordBox" Margin="0 0 0 20" Width="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Войти" Name="LoginButton" Margin="0 0 10 0" Click="LoginButton_Click"/>
                <Button Content="Регистрация" Name="RegistrationButton" Margin="10 0 0 0" Click="RegistrationButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
